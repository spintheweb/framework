{
  "name": "spintheweb",
  "version": "0.3.2",
  "exports": "./stwSpinner.ts",
  "tasks": {
    "start": "deno run --allow-net --allow-read --allow-write --allow-env --allow-run stwSpinner.ts",
    "dev": "deno run --watch --allow-net --allow-read --allow-write --allow-env --allow-run stwSpinner.ts",
    "cache": "deno cache --lock=deno.lock stwSpinner.ts",
    "lock:write": "deno cache --lock=deno.lock stwSpinner.ts",
    "lock:verify": "deno cache --lock=deno.lock --frozen stwSpinner.ts",
    "build": "deno run --allow-read --allow-write ./tasks/minify.ts",
    "release": "deno run --allow-read --allow-write --allow-run ./tasks/release.ts",
    "docker:build": "docker build -t spintheweb/webspinner:latest .",
    "docker:push": "docker push spintheweb/webspinner:latest"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@0.225.0",
    "@std/http": "jsr:@std/http@0.224.0",
    "@std/dotenv": "jsr:@std/dotenv@0.224.0",
    "@std/path": "jsr:@std/path@0.225.0",
    "emit": "jsr:@deno/emit@0.40.0",
    "minify": "https://deno.land/x/minify@v0.1.4/mod.ts"
  },
  "compilerOptions": {
    "lib": [
      "deno.window"
    ],
    "strict": true
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ],
      "exclude": [
        "no-explicit-any"
      ]
    }
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 120,
    "indentWidth": 4,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "always",
    "include": [
      "./"
    ],
    "exclude": [
      "dist",
      "build",
      ".git",
      "deployment/release"
    ]
  },
  "lock": "deno.lock"
}
