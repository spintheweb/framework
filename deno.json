{
  "name": "spintheweb",
  "version": "1.0.0",
  "exports": "./stwSpinner.ts",

  "tasks": {
    "start": "deno run --allow-net --allow-read --allow-write --allow-env stwSpinner.ts",
    "dev": "deno run --watch --allow-net --allow-read --allow-write --allow-env stwSpinner.ts",
    "cache": "deno cache stwSpinner.ts",
    "build": "deno run --allow-read --allow-write ./tasks/minify.ts",
    "headers": "deno run --allow-read --allow-write ./tasks/ensure-headers.ts",

    "docker:build": "docker build -t spintheweb/webspinner:latest .",
    "docker:push": "docker push spintheweb/webspinner:latest"
  },

  "imports": {
    "@std/assert": "jsr:@std/assert@^0.225.0",
    "@std/http": "jsr:@std/http@^0.224.0",
    "@std/dotenv": "jsr:@std/dotenv@^0.224.0",
    "@std/path": "jsr:@std/path@^0.225.0",
    "emit": "jsr:@deno/emit@^0.40.0",
    "minify": "https://deno.land/x/minify@v0.1.4/mod.ts"
  },

  "compilerOptions": {
    "lib": ["deno.window"],
    "strict": true
  },

  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    }
  },

  "fmt": {
    "options": {
      "useTabs": true,
      "lineWidth": 120,
      "indentWidth": 4,
      "singleQuote": false
    }
  },

  "lock": false
}